<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".25"
        />

    <HorizontalScrollView
        app:layout_constraintTop_toBottomOf="@id/guideline4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="NotSibling">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"><Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="@string/button"
            android:textColor="#318214"
            android:textAllCaps="true"
            />
            <Button
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="@string/button"
                android:textColor="#318214"
                android:textAllCaps="true"
                app:layout_constraintLeft_toLeftOf="@id/b1"
                />
            <Button
                android:id="@+id/b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="@string/button"
                android:textColor="#318214"
                android:textAllCaps="true"
                app:layout_constraintLeft_toLeftOf="@id/b2"
                />
            <Button
                android:id="@+id/b4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="@string/button"
                android:textColor="#318214"
                android:textAllCaps="true"
                app:layout_constraintLeft_toLeftOf="@id/b3"
                />
            <Button
                android:id="@+id/b5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="@string/button"
                android:textColor="#318214"
                android:textAllCaps="true"
                app:layout_constraintLeft_toLeftOf="@id/b4"
                />
            <Button
                android:id="@+id/b6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="@string/button"
                android:textColor="#318214"
                android:textAllCaps="true"
                app:layout_constraintLeft_toLeftOf="@id/b5"
                />
        </LinearLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>